{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [


      {
          "type": "node",
          "request": "launch",
          "name": "Developemnt local",
          "program": "${workspaceRoot}/bin/www",
          "runtimeVersion": "10.15.2",
          "env": {
              "NODE_ENV": "development_local"
          }
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Production local",
          "runtimeVersion": "10.15.2",
          "program": "${workspaceRoot}/bin/www",
          "env": {
              "NODE_ENV": "production_local"
          }
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Development",
          "runtimeVersion": "10.15.2",
          "program": "${workspaceRoot}/bin/www",
          "env": {
              "NODE_ENV": "development"
          }
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Socket",
          "runtimeVersion": "10.15.2",
          "program": "${workspaceRoot}/socket/index.js",
          "env": {
              "NODE_ENV": "development"
          }
      },
      {
          "type": "node",
          "request": "launch",
          "runtimeVersion": "10.15.2",
          "name": "agenda",
          "program": "${workspaceRoot}/worker/start.js",
          "env": {
              "NODE_ENV": "development"
          }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--timeout",
          "999999",
          "--colors",
          "--exit",
          "${workspaceFolder}/test/index.js",
        ],
        "env": {
          "NODE_ENV": "testing",
          "PORT": "8777"
        }
      },
    {
        "name": "Docker: API",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "address": "localhost",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app",
        "protocol": "inspector",
        "preLaunchTask": "dockercompose"
    }
  ]
}
